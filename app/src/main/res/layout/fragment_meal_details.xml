<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_subtitle_color"
    tools:context=".ui.meal_details.MealDetailsFragment">

    <ImageView
        android:id="@+id/meal_bg_img"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/medium"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/transparent_rounded_btn"
        android:src="@drawable/outline_arrow_back_24"
        android:tint="@color/primary_button_start"
        android:layout_margin="@dimen/padding_margin_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageButton
        android:id="@+id/btn_favorite"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/transparent_rounded_btn"
        android:contentDescription="Add to Favorites"
        android:src="@drawable/favorite"
        android:layout_margin="@dimen/padding_margin_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/primary_button_end" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/padding_margin_38"
        android:layout_marginTop="@dimen/padding_margin_230"
        android:alpha="0.8"
        app:cardCornerRadius="@dimen/padding_margin_16"
        app:cardElevation="@dimen/padding_margin_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.263"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding_margin_16">

            <TextView
                android:id="@+id/meal_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/padding_margin_8"
                android:fontFamily="@font/fredoka_bold"
                android:inputType="textCapWords"
                android:text="@string/meal_title"
                android:textColor="@color/txt_dark"
                android:textSize="@dimen/txt_size_25" />

            <com.google.android.material.chip.ChipGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.chip.Chip
                    android:id="@+id/meal_country"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:backgroundTint="@color/stroke_txt_field"
                    android:text="@string/area"
                    android:textColor="@color/txt_light"
                    app:chipCornerRadius="@dimen/padding_margin_16"
                    android:clickable="false"
                    app:chipStrokeColor="@color/secondary_color_end" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/meal_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:backgroundTint="@color/stroke_txt_field"
                    android:text="@string/category"
                    android:textColor="@color/txt_light"
                    app:chipCornerRadius="@dimen/padding_margin_16"
                    android:clickable="false"
                    app:chipStrokeColor="@color/secondary_color_end" />

            </com.google.android.material.chip.ChipGroup>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_margin_16"
        android:layout_marginTop="@dimen/padding_margin_38"
        android:fontFamily="@font/fredoka_bold"
        android:text="@string/ingredients"
        android:textColor="@color/txt_dark"
        android:textSize="@dimen/txt_size_16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/card" />

    <com.google.android.material.chip.Chip
        android:id="@+id/item_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_margin_3"
        android:text="@string/item_num"
        app:layout_constraintBottom_toBottomOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView"
        android:layout_marginEnd="@dimen/padding_margin_16"
        app:chipCornerRadius="@dimen/padding_margin_16"
        android:clickable="false"
        app:chipStrokeColor="@color/splash_subtitle_color"
        app:chipBackgroundColor="@color/secondary_color_end"
        android:textColor="@color/splash_subtitle_color"/>

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/padding_margin_16"
        android:paddingBottom="@dimen/padding_margin_16"
        app:layout_constraintTop_toBottomOf="@+id/item_num"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/ingredients_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/padding_margin_8"
            app:cardCornerRadius="@dimen/padding_margin_16"
            app:cardElevation="@dimen/padding_margin_3"
            android:layout_marginTop="@dimen/padding_margin_16"
            android:layout_marginHorizontal="@dimen/padding_margin_16"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/padding_margin_150"
                    android:scrollbars="vertical"
                    android:layout_marginHorizontal="@dimen/padding_margin_16"
                    tools:listitem="@layout/item_ingredient" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_margin_16"
            android:layout_marginTop="@dimen/padding_margin_19"
            android:fontFamily="@font/fredoka_bold"
            android:text="@string/instructions"
            android:textColor="@color/txt_dark"
            android:textSize="@dimen/txt_size_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ingredients_card" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:cardCornerRadius="@dimen/padding_margin_16"
            app:cardElevation="@dimen/padding_margin_3"
            android:layout_marginTop="@dimen/padding_margin_8"
            android:layout_marginHorizontal="@dimen/padding_margin_16"
            app:layout_constraintTop_toBottomOf="@+id/textView2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/padding_margin_16">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tv_instructions"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Step 1..."
                        android:textColor="@color/txt_dark"
                        android:lineSpacingExtra="4dp"/>
                </ScrollView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>