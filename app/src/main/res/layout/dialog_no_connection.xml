<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/primary_button_corners"
    app:cardCornerRadius="@dimen/primary_button_corners"
    app:cardElevation="@dimen/padding_margin_8"
    app:cardBackgroundColor="@color/stroke_txt_field">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/primary_button_corners"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="@dimen/txt_field_h"
            android:layout_height="@dimen/txt_field_h"
            android:src="@drawable/user"
            android:layout_marginBottom="@dimen/padding_margin_16"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_internet"
            android:textSize="@dimen/txt_size_19"
            android:textStyle="bold"
            android:textColor="@color/secondary_color"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/internet_required"
            android:textSize="@dimen/txt_size_16"
            android:textColor="@color/txt_light"
            android:gravity="center"
            android:layout_marginBottom="@dimen/primary_button_corners"/>

            <Button
                android:id="@+id/btn_ok"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@android:string/ok"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary" />

    </LinearLayout>

</androidx.cardview.widget.CardView>