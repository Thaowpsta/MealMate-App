<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_appbar"
    android:backgroundTint="@color/secondary_color_start"
    android:paddingBottom="@dimen/padding_margin_38">
    <View
        android:id="@+id/drag_handle"
        android:layout_width="@dimen/padding_margin_38"
        android:layout_height="@dimen/padding_margin_3"
        android:layout_marginTop="@dimen/padding_margin_16"
        android:background="@color/stroke_txt_field"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/padding_margin_16"
        android:layout_marginTop="@dimen/padding_margin_16"
        android:fontFamily="@font/fredoka_bold"
        android:text="Select Date"
        android:textColor="@color/splash_subtitle_color"
        android:textSize="@dimen/txt_size_19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drag_handle" />

    <TextView
        android:id="@+id/tv_current_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/padding_margin_16"
        android:fontFamily="@font/fredoka_bold"
        android:text="October 2025"
        android:textColor="@color/splash_subtitle_color"
        android:textSize="@dimen/txt_size_16"
        app:layout_constraintBottom_toBottomOf="@+id/tv_dialog_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_dialog_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_week_days"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/padding_margin_16"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/padding_margin_16"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/tv_dialog_title"
        tools:listitem="@layout/item_calendar_day" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm_date"
        android:layout_width="match_parent"
        android:layout_height="@dimen/txt_field_h"
        android:layout_marginHorizontal="@dimen/padding_margin_16"
        android:layout_marginTop="@dimen/padding_margin_38"
        android:background="@drawable/primary_button_filled"
        android:text="Select"
        android:textAllCaps="false"
        android:textColor="@color/splash_subtitle_color"
        android:textSize="@dimen/txt_size_16"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/rv_week_days" />

</androidx.constraintlayout.widget.ConstraintLayout>