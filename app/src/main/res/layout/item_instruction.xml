<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingVertical="8dp">

    <TextView
        android:id="@+id/tv_step_number"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/secondary_color_start"
        android:background="@drawable/transparent_rounded_btn"
        android:backgroundTint="@color/primary_button_end"
        android:textStyle="bold"
        android:textSize="14sp"
        android:layout_marginEnd="12dp"/>

    <TextView
        android:id="@+id/tv_step_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Mix the flour..."
        android:textColor="@color/txt_dark"
        android:textSize="14sp"
        android:lineSpacingExtra="4dp"
        android:paddingBottom="4dp" /> </LinearLayout>