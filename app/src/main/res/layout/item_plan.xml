<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/padding_margin_19"
    android:layout_marginVertical="@dimen/padding_margin_8"
    app:cardCornerRadius="@dimen/padding_margin_16"
    app:cardElevation="0dp"
    android:background="@color/splash_subtitle_color">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/mealImage"
            android:layout_width="@dimen/padding_margin_90"
            android:layout_height="0dp"
            android:contentDescription="@string/meal_title"
            android:scaleType="centerCrop"
            android:background="@drawable/plate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/mealTypeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meal_type"
            android:textColor="@color/secondary_color_start"
            android:textSize="@dimen/txt_size_12"
            android:fontFamily="@font/fredoka_bold"
            android:layout_marginHorizontal="@dimen/padding_margin_16"
            app:layout_constraintStart_toEndOf="@id/mealImage"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/padding_margin_16"/>

        <TextView
            android:id="@+id/meal_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/meal_category"
            android:textColor="@color/txt_light"
            android:textSize="@dimen/txt_size_12"
            app:layout_constraintBottom_toBottomOf="@id/mealTypeText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/mealTypeText"
            android:layout_marginEnd="@dimen/padding_margin_8"/>

        <TextView
            android:id="@+id/mealNameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/meal_title"
            android:textColor="@color/txt_dark"
            android:textSize="@dimen/txt_size_16"
            android:fontFamily="@font/fredoka_bold"
            android:layout_marginStart="@dimen/padding_margin_16"
            android:paddingVertical="@dimen/padding_margin_8"
            app:layout_constraintStart_toEndOf="@id/mealImage"
            app:layout_constraintTop_toBottomOf="@id/mealTypeText" />

        <TextView
            android:id="@+id/mealInfoText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/planed_desc"
            android:textColor="@color/txt_light"
            android:textSize="@dimen/txt_size_12"
            android:paddingBottom="@dimen/padding_margin_16"
            app:layout_constraintStart_toStartOf="@id/mealNameText"
            app:layout_constraintTop_toBottomOf="@id/mealNameText" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>