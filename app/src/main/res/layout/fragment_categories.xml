<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash_subtitle_color">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_all_categories"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingTop="140dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_appbar"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/padding_margin_16"
        android:paddingBottom="@dimen/padding_margin_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="@dimen/back_size"
                android:layout_height="@dimen/back_size"
                android:layout_margin="@dimen/padding_margin_16"
                android:background="@drawable/transparent_rounded_btn"
                android:src="@drawable/outline_arrow_back_24"
                app:tint="@color/primary_button_start" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/padding_margin_16"
                android:fontFamily="@font/fredoka_bold"
                android:text="@string/categories"
                android:textColor="@color/splash_subtitle_color"
                android:textSize="@dimen/txt_size_25" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_margin_150"
            android:text="@string/categories_subtitle"
            android:textColor="@color/splash_subtitle_color" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>