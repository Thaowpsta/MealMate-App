<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/primary_button_corners"
    app:cardCornerRadius="@dimen/primary_button_corners"
    app:cardElevation="@dimen/padding_margin_8"
    app:cardBackgroundColor="@color/stroke_txt_field">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/primary_button_corners"
        android:gravity="center_horizontal">

        <ImageView
            android:layout_width="@dimen/txt_field_h"
            android:layout_height="@dimen/txt_field_h"
            android:src="@drawable/user"
            android:layout_marginBottom="@dimen/padding_margin_16"
            app:tint="?attr/colorPrimary" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guest_mode"
            android:textSize="@dimen/txt_size_19"
            android:textStyle="bold"
            android:textColor="@color/secondary_color"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/you_need_to_login_to_use_this_feature"
            android:textSize="@dimen/txt_size_16"
            android:textColor="@color/txt_light"
            android:gravity="center"
            android:layout_marginBottom="@dimen/primary_button_corners"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@android:string/cancel"
                android:textColor="@color/txt_dark"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_marginEnd="@dimen/padding_margin_8"/>

            <Button
                android:id="@+id/btn_login"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/login"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>